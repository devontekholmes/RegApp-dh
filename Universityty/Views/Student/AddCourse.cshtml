@model IEnumerable <Registryry.Course>
@using Registryry
@{
    ViewBag.Title = "AddCourse";
}

<center><h2>AddCourse</h2></center>



<div class="container">
    @using (Html.BeginForm())
    {
    <table class="table">
        <thead>
            <tr>
                <th>Course ID </th>
                <th>Course Name </th>
                <th>Start Time </th>
                <th>Credit Hours</th>
                <th>Add Class</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Course item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => item.CourseId)</td>
                    <td>@Html.DisplayFor(x => item.Name)</td>
                    <td>@Html.DisplayFor(x => item.startTime.Hours)</td>
                    <td>@Html.DisplayFor(x => item.creditHour.Hours)</td>
                    <td>@Html.RadioButton("Add Class", item.CourseId)</td>
                </tr>
                }
        </tbody>
    </table>
    <input type="submit" value="Add Course"/>
}
</div>

